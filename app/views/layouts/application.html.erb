<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class="mt-5 mb-5">
      <%= render 'partials/message' %>
    </div>
    <div class="container">
      <div class="row">
        <% if user_signed_in? %>
          <div class="col-3">
            <%= render 'layouts/sidebar' %>
          </div>
          <div class="col-9">
            <%= yield %>
          </div>  
        <% else %>
          <div class="col-9">
            <%= yield %>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
