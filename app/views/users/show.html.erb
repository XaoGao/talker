<%= title @user.username %>

<div class="row">
  <div class="col-4 mr-3">
    <%= render 'users/image_card' %>
    <%= render 'users/sub', users: @user.subscribers %>
    <%= render 'users/sub', users: @user.subscriptions %>
  </div>
  <div class="col-7">
    <div class="card">
      <div class="card-body">
        <div class="d-flex">
          <p class="">
            <%= @user.full_name %>
          </p>
          <p class="ml-auto">
            online
          </p>
        </div>
        <div class="form-group">
          <p class="<%= "my-status" if @user == current_user %>">
            <%= @user.status.empty? ? "статус" : @user.status %>
          </p>
        </div>
        <hr>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><p class="text-center">Обо мне</p>
            <%= render 'users/user_info_item.html', name: "Имя", value: @user.full_name  %>
            <%= render 'users/user_info_item.html', name: "Известен как", value: @user.username  %>
            <%= render 'users/user_info_item.html', name: "Дата рождения", value: @user.date_of_birth  %>
            <%= render 'users/user_info_item.html', name: "Пол", value: @user.gender_name  %>
            <%= render 'users/user_info_item.html', name: "Интересы", value: @user.interests  %>
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-4">
      <% @articles.each do |article| %>
        <%= render 'articles/article', article: article %>
      <% end %>
    </div>
  </div>
</div>