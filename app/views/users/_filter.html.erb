<div class="text-center"><h1><%= t('filter.run_filter') %></h1></div>
<div class="row m-3">
  <div class="col-1"></div>
  <div class="col-10">
    <%= form_with url: users_path, method: :get, local: true do |f| %>
      <div class="form-group row">
      <div class="col-5 mb-3">
          <%= f.text_field :first_name, class: "form-control", placeholder: t('filter.users.first_name') %>
        </div>
        <div class="col-5 mb-3">
          <%= f.text_field :last_name, class: "form-control", placeholder: t('filter.users.last_name') %>
        </div>
        <div class="col-5 mb-3">
          <%= f.text_field :username, class: "form-control", placeholder: t('filter.users.username') %>
        </div>
        <div class="col-5 mb-3">
          <%= f.text_field :date_of_birth, class: "form-control", placeholder: t('filter.users.date_of_birth') %>
        </div>
        <div class="col-5 mb-3">
          <%= f.text_field :city, class: "form-control", placeholder: t('filter.users.city') %>
        </div>
        <div class="col-5 mb-3">
          <%= f.text_field :country, class: "form-control", placeholder: t('filter.users.country') %>
        </div>
      </div>
      <div class="btn-group float-right" role="group">
        <%= f.submit t('filter.run_filter'), class: "btn btn-primary" %>
        <%= link_to t('filter.clear_filter'), clear_filter_users_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
