<div class="card" style="width: 18rem;">
  <% if @user.main_photo.present? %>
    <%= image_tag(@user.main_photo.image, alt: @user.username, class: 'card-img-top')%>
  <% else %>
    <%= image_tag("user", alt: "Card image cap", class: "card-img-top") %>
  <% end %>
  <div class="card-body">
    <div class="btn-group btn-block" role="group" aria-label="Basic example">
      <button type="button" class="btn btn-success">Написать</button>
      <button type="button" class="btn btn-info">Подписаться</button>
    </div>
  </div>
</div>
