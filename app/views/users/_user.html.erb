<div class="card mb-2 user-card">
  <div class="card-img-wrappe">
    <%= image_tag("user", alt: "Card image cap", class: "card-img-top") %>
  </div>
  <div class="card-body p-1">
    <h5 class="card-title text-center"><%= user.username %></h5>
    <p class="card-text"><%= user.status.truncate(40) %></p>
    <hr>
    <ul class="list-inline member-icons animate text-center">
      <li class="list-inline-item">
        <%= link_to user_path(user) do   %>
          <button class="btn btn-primary">
            <i class="fa fa-user"></i>
          </button>
        <% end %>
      </li>
      <li class="list-inline-item">
        <button class="btn btn-primary">
          <% if user.alredy_subscription?(current_user) %>
            <i class="fa fa-plus"></i>  
          <% else %>
            <i class="fas fa-minus"></i>
          <% end %>
        </button>
      </li>
      <li class="list-inline-item">
        <button class="btn btn-primary">
          <i class="fa fa-envelope"></i>
        </button>
      </li>
    </ul>
  </div>
</div>
