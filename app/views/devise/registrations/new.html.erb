<h2><%= t 'authorization.signup' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: 'user_email' %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field  :first_name, autofocus: true, autocomplete: "first_name", id: 'user_first_name' %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", id: 'user_last_name' %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", id: 'user_username' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= t 'authorization.characters_minimum', lenght: @minimum_password_length %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", id: 'user_password' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: 'user_password_confirmation' %>
  </div>

  <div class="actions">
    <%= f.submit t('authorization.signup'), id: "user_signup_submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
