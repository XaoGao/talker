<div>
  <div href="#" id="article-dropdown-<%= article.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fas fa-grip-vertical drop-menu-grip" title="меню"></i>
  </div>

  <div class="dropdown-menu" aria-labelledby="article-dropdown-<%= article.id %>">
    <div class="dropdown-item">
      <% if article.alredy_bookmark?(current_user) %>
        <%= link_to bookmark_path(article.bookmark(current_user)), remote: true, method: :delete, id: "#{article.class}-#{article.id}-bookmark" do %>
          <i class="fas fa-trash"></i> <%= t('articles.dropdown.delete') %>
        <% end %>
      <% else %>
        <%= link_to bookmarks_path(bookmarkable_id: article.id, bookmarkable_type: article.class), remote: true, method: :post, id: "#{article.class}-#{article.id}-bookmark" do %>
          <i class="fas fa-save"></i> <%= t('articles.dropdown.save') %>  
        <% end %>
      <% end %>
    </div>
    <div class="dropdown-divider"></div>
    
    <% if current_user.admin? %>
      <div class="dropdown-item">
        <i class="fas fa-ban"></i> <%= t('articles.dropdown.ban') %> 
      </div>
    <% end %>
  </div>
</div>

  
