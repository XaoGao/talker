<div class="card mb-4">
  <% if article.image? %>
    <%= image_tag url_for(article.image), alt: article.image_title, size: "286x180", class: "card-img-top"%>
  <% end %>
  <div class="card-body">
    <%= article.body %>
    <hr>
    <i class="fas fa-heart mr-5"></i>
    <i class="far fa-comment-alt"></i>
    <i class="far fa-comment ml-5"></i>
  </div>
</div>