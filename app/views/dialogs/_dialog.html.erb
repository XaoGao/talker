<div class="card mb-2 dialog-card <%= "unread-messages" if dialog.unread_messages?(current_user) %>">
  <div class="row"> 
    <div class="col-2">
      <div class="text-center mt-2">
        <%= image_tag("user", alt: "Card image cap", class: "rounded-circle", height: '70') %>
      </div>
    </div>
    <div class="col-10">
      <div class="mt-2">
        <div class="float-left"><%= dialog.members.where.not(id: current_user.id).first.username %></div>
        <div class="float-right mr-4"><%= dialog.create_time_of_last_message %></div>
      </div>
      <br/>
      <div class="mt-2">
        <%= dialog.body_of_last_messages.truncate(80) %>
      </div>
      <% if dialog.unread_messages?(current_user) %>
        <div class="">
          <span class="badge bg-light">+ <%= dialog.unread_messages_count(current_user) %> сообщении</span>
        </div>
      <% end %>
    </div>    
  </div>
</div>
